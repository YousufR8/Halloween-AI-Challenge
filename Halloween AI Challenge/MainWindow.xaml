<Window x:Class="JokeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Joke App" Height="417" Width="880">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="jokeTextBlock" Text="Press the button for a joke!" 
                       TextWrapping="Wrap" Margin="10" FontSize="16"/>
            <Button Content="Tell Me a Joke" Click="OnTellJokeButtonClick" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
